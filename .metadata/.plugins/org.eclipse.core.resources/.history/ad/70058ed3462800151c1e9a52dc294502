package br.com.logica.de.programacao.estrutura;


import java.util.Scanner;

public class ConvertendoSegundosParaHoras {
	
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int segundos = 0;
		
		System.out.println ("Digite os seguntos para saber as horas");
		segundos = scanner.nextInt();
	
		int segundosParaMinutos = 60 / segundos;
		int minutosParaHoras = 3600/ segundosParaMinutos;
		
		String horasConvertidas = ("SÃ£o HH:" + minutosParaHoras + "min:"+segundosParaMinutos);
		System.out.println (horasConvertidas);
	}

}
