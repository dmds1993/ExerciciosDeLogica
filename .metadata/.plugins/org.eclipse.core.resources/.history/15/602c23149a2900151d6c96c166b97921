package br.com.logica.de.programacao.estrutura.sequencial;
import java.util.Scanner;


public class CalculoHorasParaSegundos {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		long hora = 3600;
		double totalDeSegundos = 0 ;
		long horasUsuario = 0;
		System.out.println ("Digite as horas para saber quantos segundos tem:");
		horasUsuario = scanner.nextLong();
		
		totalDeSegundos = hora * totalDeSegundos;
		
		
		System.out.println ("Segundos dentro de: " + horasUsuario + "/n"+
				+ totalDeSegundos);
		
		
		
	}
	
}
