package br.com.logica.programacao.data.retroativa;
import java.util.Scanner;

import javax.swing.text.html.HTMLEditorKit.Parser;


public class Data {
	
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		String data = "00/00/00";
		
		System.out.println ("Digite a data e em seguida ser√° impresso a data retroativa");
		data = scanner.nextLine();
		
		String[] array = data.split("/");
		//System.out.println ("dia="+array[0]);
		System.out.println ("mes="+array[1]);
		System.out.println ("ano="+array[2]);
		int dia = Integer.parseInt(array[0]);
		System.out.println (dia);
	}

}
