package br.com.logica.programacao.data.retroativa;

import java.util.Scanner;

public class SeparaData extends Data {

	Scanner scanner = new Scanner(System.in);
	String data = "00/00/00";

	String[] array = data.split("/");
	int dia = Integer.parseInt(array[0]);
	int mes = Integer.parseInt(array[1]);
	int ano = Integer.parseInt(array[2]);
	int opcao = 0;
	int diaAnterior;
	public void dataRetroativa(){
	if (dia==1){
		diaAnterior = 31;
		System.out.println (diaAnterior);
	}if (dia<=31){
		diaAnterior = dia -1;
		System.out.println (diaAnterior);

	}
	}
	

}
