package br.com.logica.de.programacao.exercicios.extras;
import java.util.Scanner;
public class Horas {
	
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int hora = 3600;
		int minutos = 60;
		String minutosUsuario = "";
		String horasUsuario = "";
		
		System.out.println ("Digite as horas ");
		horasUsuario = scanner.nextLine();
		System.out.println ("Digite os minutos");
		minutosUsuario = scanner.nextLine();
		
		horasUsuario = horasUsuario.replaceAll(":", ".");
		minutosUsuario = minutosUsuario.replaceAll(":", ".");
		
		
		int totalDeSegundosHoras = Integer.parseInt(horasUsuario) * hora;
		int totalDeSegundosMinutos = Integer.parseInt(minutosUsuario) * minutos;
		int segundosTotal = totalDeSegundosHoras + totalDeSegundosMinutos;
		
		System.out.println ("Total de segundos  Ã©: \n"
				+"R:"+ segundosTotal);
		
		
	}
	

}
