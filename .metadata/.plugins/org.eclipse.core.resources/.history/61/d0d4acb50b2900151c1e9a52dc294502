package br.com.logica.de.programacao.estrutura.de.decisao;
import java.util.Scanner;

/*22. Faça um programa que receba três valores diferentes e apresente-os em ordem
 * decrescente. Observação: não deverão ser aceitos valores iguais.
 */

public class ImprimindoValoresOrdemInversa {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int a,b,c;
		a =0; b =0; c=0;
		System.out.println ("Digite o valor A.");
		a = scanner.nextInt();
		System.out.println ("Digite o valor B.");
		b = scanner.nextInt();
		System.out.println ("Digite o valor B.");
		c = scanner.nextInt();
		
		 if (b==a){
			System.out.println("Numero B igual ao A favor digitar um valor diferente");
			b = scanner.nextInt();
		}if (c==a){
			System.out.println("Numero C igual ao A favor digitar um valor diferente");
			c = scanner.nextInt();
		}if (c==b){
			System.out.println("Numero C igual ao B favor digitar um valor diferente");
			c = scanner.nextInt();
		}else{
			System.out.println ("O numeros escritos foram " + c + b + a);
		}
	}
	
}
