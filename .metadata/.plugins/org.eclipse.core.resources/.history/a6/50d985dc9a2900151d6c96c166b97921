package br.com.logica.de.programacao.estrutura.sequencial;
import java.text.DecimalFormat;
import java.util.Scanner;


public class CalculoHorasParaSegundos {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		DecimalFormat format = new DecimalFormat ("00");
		long hora = 3600;
		
		long horasUsuario = 0;
		System.out.println ("Digite as horas para saber quantos segundos tem:");
		horasUsuario = scanner.nextLong();
		double totalDeSegundos = horasUsuario * hora;
		String totalDeSegundosFormatados = String.valueOf(totalDeSegundos); 
		
		
		System.out.println ("Segundos dentro de" + horasUsuario + "horas \n"
				+ totalDeSegundosFormatados);
		
		
		
	}
	
}
