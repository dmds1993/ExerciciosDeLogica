package br.com.logica.de.programacao.estrutura;


import java.text.Format;
import java.text.SimpleDateFormat;
import java.time.format.FormatStyle;
import java.util.Scanner;

public class ConvertendoSegundosParaHoras {
	
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int segundos = 0 ;
		
		System.out.println ("Digite os seguntos para saber as horas");
		segundos = scanner.nextInt();
		
		int minutos = 1 * segundos;
		int hora = 1 * minutos; 
		
		
		int conversaoMinutos = (segundos / minutos);
		int conversaoHoras = hora;
		String horasCorreta = (""+conversaoHoras+(":")+conversaoMinutos);
		System.out.println (horasCorreta);
		
	}

}
